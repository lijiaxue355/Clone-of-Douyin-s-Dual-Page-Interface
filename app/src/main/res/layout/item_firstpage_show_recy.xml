<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data
        >
        <variable
            name="item"
            type="com.example.douyin.home.Item" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
       >
        <androidx.cardview.widget.CardView
            android:layout_marginTop="4dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id = "@+id/iv_itesrecy_fpf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:imageResource = "@{item.img}"
                    android:scaleType="fitXY">

                </ImageView>
                <TextView
                    android:id = "@+id/tv_contentrecy_fpf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/iv_itesrecy_fpf"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text = "@{item.content}"
                    android:textColor="@color/black"
                    android:layout_margin="10dp">

                </TextView>
                <androidx.cardview.widget.CardView
                    android:id = "@+id/cv_titlerecy_fpf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_contentrecy_fpf"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"

                    >
                    <ImageView
                        android:id = "@+id/iv_titlerecy_fpf"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:imageResource = "@{item.titleimg}"
                        android:scaleType="fitXY">

                    </ImageView>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id = "@+id/tv_namerecy_fpf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_contentrecy_fpf"
                    app:layout_constraintLeft_toRightOf="@+id/cv_titlerecy_fpf"
                    android:text = "@{item.name}"
                    android:textSize="12sp"
                    android:textColor="@color/uncheckedbgv"
                    android:layout_margin="10dp">

                </TextView>
                <ImageView
                    android:id = "@+id/iv_likerecy_fpf"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="3dp"

                    android:src = "@drawable/uncheckedlike"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toBottomOf="@id/tv_contentrecy_fpf"
                    app:layout_constraintRight_toLeftOf="@+id/tv_likerecy_fpf"
                    >

                </ImageView>
                <TextView
                    android:id = "@+id/tv_likerecy_fpf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_contentrecy_fpf"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text = "@{item.like}"
                    android:textSize="12sp"
                    android:textColor="@color/uncheckedbgv"
                    android:layout_margin="10dp">

                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>