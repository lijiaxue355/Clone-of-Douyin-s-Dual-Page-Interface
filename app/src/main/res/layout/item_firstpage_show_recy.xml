<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.example.douyin.data.model.Video" />

        <variable
            name="viewmodel"
            type="com.example.douyin.viewmodel.HomeViewModel" />

        <variable
            name="position"
            type="int" />

        <variable
            name="recyfragment"
            type="com.example.douyin.view.fragment.RecyFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_transitionname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="2dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{(view)->recyfragment.setHomeToInterFragment(view ,position)}"
            android:transitionName="video_transition"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_itesrecy_fpf"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="fitCenter"
                    app:imageResource="@{item}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:list="@{viewmodel.mutVideoList}"
                    app:murl="@{item.videoFirstImgUrl}"
                    app:position="@{position}">

                </ImageView>

                <TextView
                    android:id="@+id/tv_contentrecy_fpf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="left"
                    android:maxLines="2"
                    android:text="@{item.videoContent}"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"

                    app:layout_constraintTop_toBottomOf="@+id/iv_itesrecy_fpf">

                </TextView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_titlerecy_fpf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_contentrecy_fpf"

                    >

                    <ImageView
                        android:id="@+id/iv_titlerecy_fpf"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:scaleType="fitXY"
                        app:imageUrlWithRatio="@{item.anthorImgUrl}">

                    </ImageView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_namerecy_fpf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@{item.anthorName}"

                    android:textColor="@color/uncheckedbgv"
                    android:textSize="10sp"
                    app:layout_constraintLeft_toRightOf="@+id/cv_titlerecy_fpf"
                    app:layout_constraintTop_toBottomOf="@id/tv_contentrecy_fpf">

                </TextView>

                <ImageView
                    android:id="@+id/iv_likerecy_fpf"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="3dp"
                    android:scaleType="fitXY"
                    android:src="@{item.isLike ? @drawable/checkedlike : @drawable/uncheckedlike}"
                    app:layout_constraintRight_toLeftOf="@+id/tv_likerecy_fpf"
                    app:layout_constraintTop_toBottomOf="@id/tv_contentrecy_fpf">

                </ImageView>

                <TextView
                    android:id="@+id/tv_likerecy_fpf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@{item.like}"
                    android:textColor="@color/uncheckedbgv"
                    android:textSize="10sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_contentrecy_fpf">

                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
